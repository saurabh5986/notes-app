<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/Template/assets/images/favicon.png">
    <title>Notes App </title>
    <!-- Custom CSS -->
    @Styles.Render("~/Content/css")

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <div id="main-wrapper">
        @Html.Partial("_Header")
        @Html.Partial("_SidebarMenu")
        <div class="page-wrapper">
            @RenderBody()
            @*<footer class="footer text-center">
                &copy; NotesApp All Rights Reserved TechnoBrains IT Solution. Designed and Developed by
                <a href="https://technobrains.net">TechnoBrains</a>.
            </footer>*@
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/js")
    @RenderSection("Scripts", required: false)
</body>
</html>